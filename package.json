{
  "name": "glowforge-material-editor",
  "version": "0.4.10",
  "private": true,
  "dependencies": {
    "@babel/runtime": "7.12.5",
    "@zxing/library": "0.15.1",
    "jsqr": "1.2.0",
    "pako": "1.0.6",
    "qr-scanner": "1.1.1",
    "qrcode": "1.4.4",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "uuid": "8.3.2"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "release-test": "yarn build && mkdir -p releases && cd build && sed -i '/\"key\"/d' manifest.json && sed -i 's/Glowforge Material Manager/Glowforge Material Manager Test/g' manifest.json && zip -r glowforge-material-manager-test.zip . && mv -f *.zip ../releases && cd ..",
    "release": "yarn build && mkdir -p releases && cd build && sed -i '/\"key\"/d' manifest.json && zip -r glowforge-material-manager.zip . && mv -f *.zip ../releases && cd ..",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@types/chrome": "0.0.128",
    "@types/jest": "24.0.12",
    "@types/pako": "1.0.1",
    "@types/qrcode": "1.3.5",
    "@types/react": "16.8.16",
    "@types/react-dom": "16.8.4",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.5",
    "camelcase": "5.2.0",
    "canvas": "2.6.1",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "css-loader": "2.1.1",
    "dotenv": "6.2.0",
    "eslint": "7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "3.0.1",
    "fs-extra": "7.0.1",
    "html-webpack-plugin": "4.0.0-beta.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.5.4",
    "jest-watch-typeahead": "0.3.0",
    "mini-css-extract-plugin": "0.5.0",
